<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Secret_TLV" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_300</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/bordeaux_1200</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="MyButton" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="backgroundTint">@color/bordeaux_1300_transparency</item>
        <item name="android:textColor">@color/grey_300</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="strokeColor">@color/grey_400</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/averia_gruesa_libre</item>
    </style>

    <style name="MyAddButton" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="backgroundTint">@color/grey_300</item>
        <item name="android:textColor">@color/bordeaux_1100</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="strokeColor">@color/grey_400</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/averia_gruesa_libre</item>
    </style>




</resources>