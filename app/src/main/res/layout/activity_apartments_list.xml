<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.ApartmentsListActivity">

    <LinearLayout
        android:id="@+id/filter_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sort_BTN"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:icon="@drawable/button_sort"
            app:iconSize="30dp"
            app:backgroundTint="@color/bordeaux_1100"
            android:textColor="@color/grey_300"
            app:iconTint="@color/grey_300"
            app:cornerRadius="0dp"
            android:textSize="15sp"
            android:text="Sort" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/filter_BTN"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:icon="@drawable/button_filter"
            app:iconSize="33dp"
            app:backgroundTint="@color/bordeaux_1100"
            android:textColor="@color/grey_300"
            app:iconTint="@color/grey_300"
            app:cornerRadius="0dp"
            android:textSize="15sp"
            android:text="Filter" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/map_BTN"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:icon="@drawable/button_map"
            app:iconSize="30dp"
            app:backgroundTint="@color/bordeaux_1100"
            android:textColor="@color/grey_300"
            app:iconTint="@color/grey_300"
            app:cornerRadius="0dp"
            android:textSize="15sp"
            android:text="Map" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_RV_apartments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/filter_LL" />


</RelativeLayout>